<% if user_signed_in? %>
  <% if !Favorite.exists?(user_id: current_user.id, memo_id: memo.id) %>
    <p><%=link_to "お気に入り登録:", memo_favorites_path(memo.id), method: :post, remote: true, class: "favorite-btn" %><span><%= memo.favorites.count %></span></p>
  <% else %>
    <p><%=link_to "お気に入り解除:", memo_favorite_path(memo_id: memo.id, id: memo.favorites[0].id), method: :delete, remote: true, class: "favorite-btn" %><span><%= memo.favorites.count %></span></p>
  <% end %>
<% else %>
  <p><span>お気に入り数: </span><%= memo.favorites.count %></p>
<% end %>